<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWrite">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/collapsingtollbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <ImageView
                        android:id="@+id/image_home"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:background="@color/colorLogo"
                        android:scaleType="centerCrop"
                        app:layout_collapseMode="parallax"/>

                    <android.support.v7.widget.Toolbar
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_marginTop="20dp"
                        app:contentInsetStart="0dp"
                        app:layout_collapseMode="pin"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <FrameLayout
                                android:id="@+id/fl_title_menu"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="?android:selectableItemBackground"
                                android:paddingLeft="18dp"
                                android:paddingRight="18dp">

                                <ImageView
                                    android:id="@+id/iv_title_menu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/titlebar_menu"/>
                            </FrameLayout>

                            <ImageView
                                android:id="@+id/image_menu"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="?android:attr/selectableItemBackground"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:src="@drawable/ic_more_vert_write_24dp"/>
                        </RelativeLayout>
                    </android.support.v7.widget.Toolbar>

                </android.support.design.widget.CollapsingToolbarLayout>
            </android.support.design.widget.AppBarLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWrite"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:weightSum="5">

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardview_type1"
                            style="@style/Home_CardStyle"
                            app:cardCornerRadius="25dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="true">

                            <TextView
                                android:id="@+id/text_type1"
                                style="@style/Home_TypeStyle"
                                android:text="@string/home_model_1"/>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardview_type2"
                            style="@style/Home_CardStyle"
                            app:cardCornerRadius="25dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="true">

                            <TextView
                                android:id="@+id/text_type2"
                                style="@style/Home_TypeStyle"
                                android:text="@string/home_model_2"/>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardview_type3"
                            style="@style/Home_CardStyle"
                            app:cardCornerRadius="25dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="true">

                            <TextView
                                android:id="@+id/text_type3"
                                style="@style/Home_TypeStyle"
                                android:text="@string/home_model_3"/>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardview_type4"
                            style="@style/Home_CardStyle"
                            app:cardCornerRadius="25dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="true">

                            <TextView
                                android:id="@+id/text_type4"
                                style="@style/Home_TypeStyle"
                                android:text="@string/home_model_4"/>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardview_type5"
                            style="@style/Home_CardStyle"
                            app:cardCornerRadius="25dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="true">

                            <TextView
                                android:id="@+id/text_type5"
                                style="@style/Home_TypeStyle"
                                android:text="@string/home_model_5"/>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWrite"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardview_type6"
                            style="@style/Home_CardStyle"
                            app:cardCornerRadius="25dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="true">

                            <TextView
                                android:id="@+id/text_type6"
                                style="@style/Home_TypeStyle"
                                android:text="@string/home_model_6"/>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardview_type7"
                            style="@style/Home_CardStyle"
                            app:cardCornerRadius="25dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="true">

                            <TextView
                                android:id="@+id/text_type7"
                                style="@style/Home_TypeStyle"
                                android:text="@string/home_model_7"/>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardview_type8"
                            style="@style/Home_CardStyle"
                            app:cardCornerRadius="25dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="true">

                            <TextView
                                android:id="@+id/text_type8"
                                style="@style/Home_TypeStyle"
                                android:text="@string/home_model_8"/>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardview_type9"
                            style="@style/Home_CardStyle"
                            app:cardCornerRadius="25dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="true">

                            <TextView
                                android:id="@+id/text_type9"
                                style="@style/Home_TypeStyle"
                                android:text="@string/home_model_9"/>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardview_type10"
                            style="@style/Home_CardStyle"
                            app:cardCornerRadius="25dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="true">

                            <TextView
                                android:id="@+id/text_type10"
                                style="@style/Home_TypeStyle"
                                android:text="@string/home_model_10"/>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorWrite"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/text_model_1"
                                style="@style/Home_TextStyle"
                                android:text="@string/home_text_1"/>

                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerview_model_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>
                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </android.support.design.widget.CoordinatorLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/navigationview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/navigation_header"/>

    </android.support.v4.widget.DrawerLayout>
</layout>
